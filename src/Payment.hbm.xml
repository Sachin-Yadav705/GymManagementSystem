<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">	
 
 <hibernate-mapping>
	
 <class name="pojo.Payment" table="Payment_table" schema="public">
   		<id name="payid" type="int">
   		<generator class="increment"></generator>
   	</id>
   	<property name="usid" column="User_ID" type="int"></property>
   	<property name="orderid" column="orderid" type="int"></property>
   	<property name="payamt" column="amount" type="int"></property>
   	<property name="paydate" column="date"  type="date"></property>
   	<property name="paymode" column="mode" type="string"></property>
   	
   	</class> 
  
	</hibernate-mapping>